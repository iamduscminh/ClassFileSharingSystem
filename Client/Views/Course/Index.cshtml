@using BusinessObjects.Entities
@using Client.Models
@{
    ViewData["Title"] = "Course Page";
}
@model List<Course>;
<link rel="stylesheet" href="~/css/index.css" />
<div class="container mt-5 mb-3">
    <div class="card rounded-3">
        <div class="card-body">
            <h4 class="card-title">Owner: @ViewData["teacherEmail"]</h4>
            <p class="card-text"><strong>Number of Resource:</strong></p>
            <p class="card-text"><strong>Number of File:</strong></p>
            <button type="button"
                    class="btn btn-outline-dark btn-rounded"
                    data-mdb-ripple-color="dark"
                    data-bs-toggle="modal"
                    data-bs-target="#createCourseModal"
                    style="width:20%">
                Create Course
            </button>
        </div>
    </div>
    <div class="row mt-4">
        @foreach (Course c in Model)
        {
            <div class="col-md-3">
                <div class="card p-3 mb-2">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
                            <div class="ms-2 c-details">
                                <h6 class="mb-0">@(c.Teacher!=null ? c.Teacher.FullName : ViewData["teacherEmail"])</h6> 
                                <span><strong>Code:</strong> @c.CourseCode</span><br/>
                                <span>@c.Students.Count students</span>
                            </div>
                        </div>
                        <div class="menu-nav">
                            <div class="dropdown-container" tabindex="-1">
                                <div class="three-dots"></div>
                                <div class="dropdown">
                                    <a data-bs-toggle="modal" data-bs-target="#editCourseModal" onClick="onUpdateCourse('@c.CourseId','@c.CourseName');"><div>Edit Course</div></a>
                                    <a href="#"><div>Delete Course</div></a>
                                    <a href="/Student?courseId=@c.CourseId"><div>Student Manager</div></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5">
                        <h4 class="heading text-limit-3">@c.CourseName</h4>
                        <div class="mt-5">
                            <div class="mt-3"> <a href="/Course/Detail/@c.CourseId">Go to course</a> </div>
                            <div class="mt-3"> <a href="/Student?courseId=@c.CourseId">Student in course</a> </div>
                        </div>
                    </div>
                </div>
            </div>
        }



    </div>
</div>


<!-- Modal Change Course Name-->
<div class="modal fade"
     id="editCourseModal"
     tabindex="-1"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Course</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <form action="/Course/UpdateCourse" method="post">
                 <input class="form-control" type="hidden" id="formCourseId" name="courseId" />
                <div class="modal-body">
                    <div class="mb-3 d-flex">
                        <label for="formFile" class="form-label">Course Name </label>
                        <input class="form-control" type="text" id="formCourseOldName" name="courseName" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Modal Create Course-->
<div class="modal fade"
     id="createCourseModal"
     tabindex="-1"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Course</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <form action="/Course/CreateCourse" method="post">
                
                <div class="modal-body">
                    <div class="mb-3 d-flex">
                        <label for="formFile" class="form-label">Course Name </label>
                        <input class="form-control" type="text" id="formCourseName" name="courseName" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/course.js"></script>
